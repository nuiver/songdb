<p id="notice"><%= notice %></p>

<h1>Artists</h1>


<table>
  <thead>
    <tr>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= image_tag(artist.image.thumbnail.url, size: "70x70") %></td>
        <td><%= link_to artist.name, artist %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artist', new_artist_path %>
